@model Moment3_2.Models.BookLoan

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BookLoan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Book Title</dt>
        <dd class="col-sm-10">@Model.Book.Title</dd>

        <dt class="col-sm-2">Borrower Name</dt>
        <dd class="col-sm-10">@Model.Borrower.Name</dd>

        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@Model.LoanDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Return Date</dt>
        <dd class="col-sm-10">
            @Model.ReturnDate?.ToString("yyyy-MM-dd") 
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookLoanId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
